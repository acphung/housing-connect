<body class="text-center">
  <div id="login" class="form-signin">
    <h1 class="h1 mb-3 font-weight-bold">Housing Connect</h1>
    <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="txtEmail" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="txtPassword" class="form-control" placeholder="Password" required="">
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn btn-primary btn-block" onclick="login()">Sign in</button>
    <button class="btn btn btn-outline-primary btn-block" onclick="goToSignUp()">Create an Account</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
  </div>
  <div style="display:none" id="signUp" class="form-signin">
    <h1 class="h1 mb-3 font-weight-bold">Housing Connect</h1>
    <h2 class="h3 mb-3 font-weight-normal">Please sign up</h2>
