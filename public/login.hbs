    <input type="email" id="sEmail" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="sPassword" class="form-control" placeholder="Password" required="">
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn btn-primary btn-block" onclick="signUp()">Sign up</button>
    <button class="btn btn btn-outline-secondary btn-block" onclick="cancel()">Cancel</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
